<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:multitouch="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <nostalgia.framework.ui.multitouchbutton.MultitouchLayer
        android:id="@+id/act_remote_mtl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"

        android:padding="1dp"
        android:splitMotionEvents="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:src="@drawable/r_button_back_selector" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="#0000"
                        android:src="@drawable/r_button_select_selector" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:background="#0000"
                        android:src="@drawable/r_button_start_selector" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_connect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:src="@drawable/r_button_connect_selector"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:src="@drawable/r_button_search_selector" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:src="@drawable/r_button_menu_selector" />
                </LinearLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/dpad"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp">

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="#0000"
                        android:src="@drawable/r_button_up_selector" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#0000"
                        android:src="@drawable/r_button_right_selector" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#0000"
                        android:src="@drawable/r_button_down_selector" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="#0000"
                        android:src="@drawable/r_button_left_selector" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="#0000"
                        android:src="@drawable/r_button_center_selector" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchTwoButtonArea
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:src="@drawable/r_button_left_up_mask"
                        multitouch:first_button="@id/button_up"
                        multitouch:second_button="@id/button_left" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchTwoButtonArea
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="#0000"
                        android:src="@drawable/r_button_right_up_mask"
                        multitouch:first_button="@id/button_up"
                        multitouch:second_button="@id/button_right" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchTwoButtonArea
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="#0000"
                        android:src="@drawable/r_button_right_down_mask"
                        multitouch:first_button="@id/button_down"
                        multitouch:second_button="@id/button_right" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchTwoButtonArea
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#0000"
                        android:src="@drawable/r_button_left_down_mask"
                        multitouch:first_button="@id/button_down"
                        multitouch:second_button="@id/button_left" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ab_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="#0000"
                        android:src="@drawable/r_button_a_selector" />

                    <nostalgia.framework.ui.multitouchbutton.MultitouchImageButton
                        android:id="@+id/button_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:background="#0000"
                        android:src="@drawable/r_button_b_selector" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </nostalgia.framework.ui.multitouchbutton.MultitouchLayer>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#000"
        android:visibility="invisible">

        <EditText
            android:id="@+id/search_editbox"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:hint="Type search name"
            android:singleLine="true" />
    </FrameLayout>

    <TextView
        android:id="@+id/port_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="90dp"
        android:paddingTop="70dp"
        android:text="1"
        android:textColor="#ff003047"
        android:textSize="100dp" />

</RelativeLayout>