<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@drawable/row_slot_item_bck_selector"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="@dimen/slot_item_size"
        android:layout_height="@dimen/slot_item_size"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_slot_bck"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/slot_item_bck" />

        <ImageView
            android:id="@+id/row_slot_screenshot"
            android:layout_width="224dp"
            android:layout_height="168dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/row_slot_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/row_slot_bck"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="17dp"
            android:text="SLOT 1"
            android:textColor="#ff000000"
            android:textSize="27dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/row_slot_bck"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_slot_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12.07.2013"
                android:textColor="#ff000000"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/row_slot_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="46dp"
                android:gravity="right"
                android:text="20:20"
                android:textColor="#ff000000"
                android:textSize="21dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/row_slot_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:text="EMPTY"
            android:textColor="#ff000000"
            android:textSize="40dp" />
    </RelativeLayout>

</FrameLayout>